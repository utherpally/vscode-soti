{
  "name": "soti",
  "displayName": "Soti",
  "version": "0.0.1",
  "description": "Switch segments of text with predefined replacements",
  "license": "MIT",
  "publisher": "langbamit",
  "repository": {
    "type": "git",
    "url": "https://github.com/utherpally/vscode-soti.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/utherpally/vscode-soti",
  "bugs": "https://github.com/utherpally/vscode-soti/issues",
  "icon": "images/logo.jpg",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "soti.swish",
        "title": "Swish: Swap text with predefined replacements"
      },
      {
        "command": "soti.emojiCommit",
        "title": "Emoji Commit ðŸ¦„",
        "icon": {
          "dark": "images/emojiCommit.svg",
          "light": "images/emojiCommit.svg"
        }
      }
    ],
    "menus": {
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "soti.emojiCommit",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Soti",
      "properties": {
        "soti.swish.customDefinitions": {
          "type": "array",
          "default": [],
          "description": "Create custom definitions"
        },
        "soti.swish.languages": {
          "type": "object",
          "default": {
            "javascript": []
          },
          "description": "Create custom definitions per language"
        },
        "soti.swish.useDefaultDefinitions": {
          "type": "boolean",
          "default": true,
          "description": "Use default definitions"
        }
      }
    },
    "keybindings": [
      {
        "command": "soti.swish",
        "key": "alt+b",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "build": "rimraf out && cross-env NODE_ENV=production rollup -c",
    "watch": "rollup -cw",
    "test": "jest",
    "test:update": "jest -u",
    "lint": "eslint src --ext ts",
    "lint:fix": "npm run lint -- --fix",
    "release": "bumpp --tag --commit --push"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@rollup/plugin-sucrase": "3.1.0",
    "@rollup/plugin-typescript": "8.2.1",
    "@types/glob": "7.1.3",
    "@types/jest": "26.0.23",
    "@types/mocha": "8.2.2",
    "@types/node": "^16.18.16",
    "@types/vscode": "1.75.0",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "@vscode/vsce": "^2.18.0",
    "bumpp": "6.0.6",
    "cross-env": "7.0.3",
    "eslint": "7.26.0",
    "eslint-plugin-jest": "24.3.6",
    "jest": "26.6.3",
    "jiti": "1.9.2",
    "ncp": "2.0.0",
    "rimraf": "3.0.2",
    "rollup": "2.47.0",
    "ts-jest": "26.5.6",
    "tslib": "2.2.0",
    "typescript": "4.2.4"
  }
}
